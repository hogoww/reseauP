};

int main(int argc,char** argv){
  int port=0;
  if(argc>2){/*Check arguments*/
    fprintf(stderr,"\n\nusage : ./serveur port\n\n");
    exit(EXIT_SUCCESS);
  }
  if(argc==2){
    port=htons(atoi(argv[1]));
  }
  else{
    port=12000;/*Hard coded for debug purposes*/
  }
  
  

  return 0;
}
